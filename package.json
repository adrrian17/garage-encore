{
  "name": "garage-comics",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check": "biome check --write",
    "dev": "bun --bun concurrently \"bun:dev:web\" \"bun:dev:api\"",
    "dev:web": "cd apps/web && bun run dev",
    "dev:api": "cd apps/api && go run .",
    "prepare": "husky"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^9.1.7"
  },
  "dependencies": {
    "@lucide/astro": "^0.525.0",
    "csv-parser": "^3.2.0",
    "dotenv": "^17.2.1",
    "encore.dev": "^1.48.13",
    "zustand": "^5.0.6"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --write ."
    ]
  }
}
