---
import DefaultLayout from "@/layouts/DefaultLayout.astro";
---

<DefaultLayout>
  <div class="flex items-center flex-col w-full mt-12">
    <div class="bg-gradient-to-br from-orange-50 to-amber-50 border border-orange-200 rounded-lg p-8 max-w-md w-full text-center shadow-sm">
      <div class="w-16 h-16 bg-orange-100 border border-orange-200 rounded-full flex items-center justify-center mx-auto mb-6">
        <svg class="w-8 h-8 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
        </svg>
      </div>
      
      <div class="prose prose-lg">
        <h1 class="text-orange-800 mb-4">Pago Cancelado</h1>
        <p class="text-orange-700 mb-6">Tu compra ha sido cancelada. No se realizó ningún cargo.</p>
        
        <div class="flex flex-col gap-4">
          <a 
            href="/comics" 
            class="btn btn-secondary text-stone-50 rounded-none no-underline hover:bg-opacity-90"
          >
            Intentar de nuevo
          </a>
          <a 
            href="/" 
            class="text-orange-600 hover:text-orange-800 no-underline transition-colors"
          >
            Volver al inicio
          </a>
        </div>
      </div>
    </div>
  </div>
</DefaultLayout>